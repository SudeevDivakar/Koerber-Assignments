spring:
  application:
    name: gateway
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true

server:
  port: 8765

management:
  endpoints:
    web:
      exposure:
        include: "*"
      base-path: "/actuator"
  endpoint:
    shutdown:
      enabled: true
    health:
      enabled: true
#      Prometheus
    prometheus:
      enabled: true
    metrics:
      enabled: true
#      Prometheus end
  info:
    env:
      enabled: true
  health:
    livenessstate:
      enabled: true
    readinessstate:
      enabled: true
#      Zipkin
  tracing:
    sampling:
      probability: 1.0
#      Zipkin end

logging:
  pattern:
    level: "%5p [${spring.application.name:},%X{traceId:-},%X{spanId:-}]"